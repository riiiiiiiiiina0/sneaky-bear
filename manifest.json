{
  "manifest_version": 3,
  "name": "Quick PiP Toggle",
  "version": "0.1.0",
  "description": "Toggle Picture-in-Picture on the current page and deactivate from any tab.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_title": "Toggle Picture-in-Picture"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/contentScripts/content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}